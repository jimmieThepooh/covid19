<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Covid-19</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/covid.min.css" />

    <link rel="stylesheet" type="text/css" href="~/lib/datatables/datatables.min.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/font-awesome/css/fontawesome.min.css" />

    @*<link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />*@
    @if (IsSectionDefined("CustomStyles"))
    {
        @RenderSection("CustomStyles", required: false)
    }

    <link rel="stylesheet" type="text/css" href="~/css/Geo9/custom.css" />

    <style>
        .navbar-inverse .navbar-nav > li > a {
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #1d374a;">
        <div class="container-fluid">
            <div class="navbar-header">
                <span class="navbar-brand" style="color:#fff;"> I<span style="color:#337ab7" class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>T DEVICES</span>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" id="menuBar"></ul>
                <ul class="nav navbar-nav navbar-right">

                    <li class="dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            [[ IoTWeb.Core.SessionUtils.USR_FULLNAME ]]
                            <img class="img-profile rounded-circle" id="profilePic" height="22" width="22"> <span class="caret"></span>
                        </a>
                        <!-- Dropdown - User Information -->
                        <ul class="dropdown-menu">
                            <li>
                                <a href="@Url.Action("ProfileEdit", "Main")">Edit Profile</a>
                            </li>

                        </ul>
                    </li>
                    <li><a href="@Url.Action("Logout", "Home")"><i class="fa fa-power-off"></i></a></li>
                </ul>

            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - IoT Devices</p>
        </footer>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootbox/bootbox.min.js"></script>
    <script src="~/lib/select2/dist/js/select2.min.js"></script>
    <script src="~/js/jquery-validation.min.js"></script>
    <script src="~/lib/datatables/datatables.min.js"></script>
    <partial name="_JavaScriptCoreFunction.cshtml" />
    <script src="~/js/core.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
